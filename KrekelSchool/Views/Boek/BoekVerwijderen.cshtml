@model KrekelSchool.Models.BoekViewModel


<div class="">
    <h2>@ViewBag.Title</h2>
    <h4>Bent u zeker dat u @Model.Naam wil verwijderen?</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Naam) :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Naam)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Beschrijving) :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Beschrijving)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Beschikbaar) :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Beschikbaar)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Leeftijd) :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Leeftijd)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Isbn) :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Isbn)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Auteur) :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Auteur)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Uitgever) :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Uitgever)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value=" " class="btn btn-default addOk" />
            <button type="button" class="btn btn-default btnClose" data-dismiss="modal"></button>
        </div>
    }
</div>
<script type="text/javascript">
    $(function () {
        $('addOk').click(function () {
            $('#modal-container').modal('hide');
            location.reload();
        });
        $('.btnClose').click(function () {
            location.reload();
        });
    });
</script>
