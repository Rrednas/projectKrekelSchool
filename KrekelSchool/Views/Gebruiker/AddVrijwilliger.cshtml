@model KrekelSchool.Models.ViewModels.GebruikerViewModel
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
@{
    ViewBag.Title = Model.Id == 0 ? "Vrijwilliger Toevoegen" : "Vrijwilliger Wijzigen";
}


<h2 class="modalFormTitle">@ViewBag.Title</h2>
<h4>@ViewBag.Message</h4>
<hr />
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal modalForm">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Uname, htmlAttributes: new { @class = "control-label col-md-2 label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Uname, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Uname, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Pswd, htmlAttributes: new { @class = "control-label col-md-2 label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Pswd, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Pswd, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Naam, htmlAttributes: new { @class = "control-label col-md-2 label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Naam, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Naam, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value=" " class="btn btn-default addOk" style="margin: 0" />
                <button type="button" class="btn btn-default btnClose" data-dismiss="modal"></button>
            </div>
        </div>
    </div>
}

<script type="text/javascript">
    $(function () {
        $('addOk').click(function () {
            $(this).removeData('bs.modal');
            //location.reload();
        });
        $('.btnClose').click(function () {
            location.reload();
        });
    });
</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
