@model KrekelSchool.Models.ViewModels.GebruikerScreenViewModel

@{
    ViewBag.Title = "Log in";
}
<div class="banner">
    <img src="~/images/krekelBanner.png" alt="de krekel banner" />
</div>

<h2>@ViewBag.Title.</h2>
<div class="row">
    <div class="col-md-12">
        <section id="loginForm">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <h4>Gebruik uw Gebruikersnaam en wachtwoord om in te loggen.</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">

                    @Html.LabelFor(m => m.Uname, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Uname, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Uname, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Pswd, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Pswd, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Pswd, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Log in" class="btn btn-default" />
                    </div>
                </div>
            }
        </section>
    </div>
</div>